<Window x:Class="Sum10Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="夏宝杀手 (CUDA C++|OpenCV|WPF)" Height="900" Width="1400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="460" />
        </Grid.ColumnDefinitions>

        <!-- Left: screenshot + overlay -->
        <Grid>
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Image x:Name="ImgScreen" Stretch="Uniform"
                                   MouseLeftButtonDown="ImgScreen_MouseLeftButtonDown"
                                   MouseMove="ImgScreen_MouseMove"
                                   MouseLeftButtonUp="ImgScreen_MouseLeftButtonUp"/>
                            <Canvas x:Name="Overlay" IsHitTestVisible="False"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Right: controls -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10" Orientation="Vertical" >

                <TextBlock FontSize="18" FontWeight="Bold" Text="Controls" Margin="0,0,0,8"/>

                <CheckBox x:Name="ChkCuda" Content="启用 CUDA 加速 (OCR + 求解)" IsChecked="False" Margin="0,0,0,10"
                          Checked="ChkCuda_Checked" Unchecked="ChkCuda_Checked"/>
                
                <WrapPanel Margin="0,0,0,10">
                    <Button Width="140" Margin="0,0,8,8" Content="Capture Screen" Click="BtnCapture_Click"/>
                    <Button Width="140" Margin="0,0,8,8" Content="Reset 4 Points" Click="BtnResetPoints_Click"/>
                    <Button Width="140" Margin="0,0,8,8" Content="Run OCR" Click="BtnOcr_Click"/>
                </WrapPanel>

                <GroupBox Header="模板选择" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Text="选择角色：索林，迪赛尔，布丽德" Margin="0,0,0,6"/>
                        <ComboBox x:Name="CbDigitTemplates" Width="220" SelectionChanged="CbDigitTemplates_SelectionChanged"/>
                        <TextBlock x:Name="TbTemplatePath" Margin="0,6,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Board Settings" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <WrapPanel>
                            <TextBlock Width="60" VerticalAlignment="Center" Text="Rows:"/>
                            <TextBox x:Name="TbRows" Width="80" Text="16"/>
                            <TextBlock Width="60" Margin="16,0,0,0" VerticalAlignment="Center" Text="Cols:"/>
                            <TextBox x:Name="TbCols" Width="80" Text="10"/>
                        </WrapPanel>

                        <WrapPanel Margin="0,8,0,0">
                            <TextBlock Width="60" VerticalAlignment="Center" Text="OffX:"/>
                            <TextBox x:Name="TbOffX" Width="80" Text="0"/>
                            <TextBlock Width="60" Margin="16,0,0,0" VerticalAlignment="Center" Text="OffY:"/>
                            <TextBox x:Name="TbOffY" Width="80" Text="0"/>
                        </WrapPanel>

                        <WrapPanel Margin="0,8,0,0">
                            <TextBlock Width="60" VerticalAlignment="Center" Text="Delay:"/>
                            <TextBox x:Name="TbDelay" Width="80" Text="120"/>
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Text="ms per move"/>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="OCR Result" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock x:Name="TbOcrInfo" Text="-" Margin="0,0,0,6"/>
                        <Border BorderBrush="LightGray" BorderThickness="1" Padding="6" CornerRadius="6">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <UniformGrid x:Name="BoardGrid" Rows="1" Columns="1"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <WrapPanel Margin="0,0,0,10">
                    <Button x:Name="BtnSolve" Width="140" Margin="0,0,8,8" Content="夏宝的脑袋" Click="BtnSolve_Click"/>
                    <Button Width="140" Margin="0,0,8,8" Content="给他锤爆" Click="BtnExecute_Click"/>
                </WrapPanel>

                <GroupBox Header="Moves">
                    <ListBox x:Name="LbMoves" Height="180" Margin="10"/>
                </GroupBox>

                <GroupBox Header="Log" Margin="0,10,0,0">
                    <TextBox x:Name="TbLog" Height="220" Margin="10" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
